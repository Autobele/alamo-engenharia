{% extends "_layouts/providers.njk" %}

{% block content %}
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Relação de Funcionários</h6>
        </div>
        <div class="card-body">

            {% if funcionarios.length > 0 %}
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th class="text-center">#</th>
                                <th colspan="3" class="text-center">Nome</th>
                                <th class="text-center">Matrícula</th>
                                <th class="text-center">Status</th>
                                <th style="width: 150px;" class="text-center">Ação</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for funcionario in funcionarios %}
                                <tr>
                                    <td class="align-middle text-center">{{funcionario.id}}</td>
                                    <td class="align-middle text-center" colspan="3">{{funcionario.name}}</td>
                                    <td class="align-middle text-center">{{funcionario.matricula}}</td>
                                    <td class="align-middle text-center">
                                        {% if funcionario.ativo == 1 %}
                                            <span class="p-3 mb-2 text-success font-weight-bold">Ativo</span>
                                        {% else %}
                                            <span class="p-3 mb-2 text-danger font-weight-bold">Inativo</span>
                                        {% endif %}
                                    </td>
                                    <td class="d-flex justify-content-center" style="width: 150px;">
                                        <form action="/app/providers/register/{{funcionario.id}}" method="get" class="mx-3">
                                            <button class="btn btn-info btn-icon-circle" type="submit">
                                                <i class="fas fa-info-circle"></i>
                                            </button>
                                        </form>
                                        <form action="/app/providers/change-status/{{funcionario.id}}" method="post">
                                            <button class="btn btn-warning btn-icon-circle" type="submit">
                                                <i class="fas fa-exclamation-triangle"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

            {% else %}
                <h3>{{msg}}</h3>
            {% endif %}

        </div>
    </div>
{% endblock %}